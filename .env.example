# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mcp_db
DB_USER=mcp_user
DB_PASSWORD=mcp_password

# Embedding Model
EMBEDDING_MODEL_PATH=/app/models/bge-large-en-v1.5

# Crawler Configuration
CRAWLER_MODE=daemon
CRON_SCHEDULE=0 0 * * *
CRAWLER_AUTH_USERNAME=admin
# bcrypt hash for the default "changeme" password; override for deployments
CRAWLER_AUTH_PASSWORD_BCRYPT=$2a$12$zgLQbn7GZlf1qnUxQuFQ8OzM.NMBvvXVbh3S7gi934P1OxNmVP9xW
CRAWLER_SESSION_SECRET=replace-with-32-byte-secret
# Optional override; defaults to CRAWLER_SESSION_SECRET when unset
# CRAWLER_AUTH_TOKEN_SECRET=

# Logging
LOG_LEVEL=INFO
